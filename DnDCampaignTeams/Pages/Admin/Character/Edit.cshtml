@page
@model DnDCampaignTeams.Pages.Admin.Character.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Character.Id" />
            <div class="form-group">
                <label asp-for="Character.Name" class="control-label"></label>
                <input asp-for="Character.Name" class="form-control" />
                <span asp-validation-for="Character.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Class" class="control-label"></label>
                <input asp-for="Character.Class" class="form-control" />
                <span asp-validation-for="Character.Class" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Character.Alive" /> @Html.DisplayNameFor(model => model.Character.Alive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Character.Level" class="control-label"></label>
                <input asp-for="Character.Level" class="form-control" />
                <span asp-validation-for="Character.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Player</label>
                <select asp-for="Character.PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Campaign</label>
                <select asp-for="Character.CampaignId" class="form-control" asp-items="ViewBag.CampaignId">
                    <option value="">None</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Character.AvatarLocation" class="control-label"></label>
                <input type="hidden" asp-for="Character.AvatarLocation" />
                <img asp-append-version="false" src="~/images/@Model.Character.AvatarLocation" />
                <input type="file" asp-for="Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
