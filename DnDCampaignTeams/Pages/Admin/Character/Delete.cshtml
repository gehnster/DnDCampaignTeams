@page
@model DnDCampaignTeams.Pages.Admin.Character.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Character</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Class)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Class)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Alive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Alive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Level)
        </dd>
        <dt class="col-sm-2">
            Player Name
        </dt>
        <dd class="col-sm-10">
            @Model.Character.Player.FirstName  @Model.Character.Player.LastName
        </dd>
        <dt class="col-sm-2">
            Campaign Name
        </dt>
        <dd class="col-sm-10">
            @Model.Character.Campaign?.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.AvatarLocation)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Character.AvatarLocation != null)
            {
                <img asp-append-version="false" src="~/images/@Model.Character.AvatarLocation" />
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Character.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
