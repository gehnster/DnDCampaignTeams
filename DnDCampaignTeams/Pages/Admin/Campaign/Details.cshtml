@page
@model DnDCampaignTeams.Pages.Admin.Campaign.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Campaign</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Description)
        </dd>
        <dt class="col-sm-2">
            Logo
        </dt>
        <dd class="col-sm-10">
            @if (Model.Campaign.LogoLocation != null)
            {
                <img asp-append-version="false" src="~/images/@Model.Campaign.LogoLocation" />
            }
        </dd>
    </dl>
</div>
<div>

    <a asp-page="./Edit" asp-route-id="@Model.Campaign.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
