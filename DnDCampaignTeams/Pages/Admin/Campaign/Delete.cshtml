@page
@model DnDCampaignTeams.Pages.Admin.Campaign.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Campaign</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaign.Description)
        </dd>
        <dt class="col-sm-2">
            Logo
        </dt>
        <dd class="col-sm-10">
            @if (Model.Campaign.LogoLocation != null)
            {
                <img asp-append-version="false" src="~/images/@Model.Campaign.LogoLocation" />
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Campaign.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
